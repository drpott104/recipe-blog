<%- include('../partials/header') %>

<table id="list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function(r) {
            <tr>
                <td><%= r.title %></td>
                <td><%= r.category %></td>
                <td><a href="/recipes/<%= r._id %>">DETAILS</a></td>
            </tr>
        })
    </tbody>
</table>

<%- include('../partials/footer') %>