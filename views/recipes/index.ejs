<%- include('../partials/header') %>

<h1><%= title %></h1>

<table id="list">
    <thead>
        <tr>
            <th>Recipe</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function(r) { %>
            <tr>
                <td><%= r.title %></td>
                <td><%= r.category %></td>
                <td><a href="/recipes/<%= r._id %>">DETAILS</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>